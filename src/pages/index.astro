---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

---

<Layout title="Portfolio">
	<section class="min-h-screen flex flex-col justify-center py-12">
		<div class="flex flex-col md:flex-row items-start gap-12 px-6">
			<div class="flex-1">
				<h1 class="text-huge md:text-display font-bold mb-8 leading-none tracking-[-0.075em]">
					hello,<br/>
					bonjour, 今日は<span class="text-[#FFA500] animate-ping rounded-full">.</span>
				</h1>
				<p class="text-xl md:text-3xl font-light max-w-4xl">
					My name is Roger.<br/> 
					I am a Data Analyst, a seasoned SEO specialist, a Python developer, and all round Full-Stack Digital Craftsman with a love for automations.
				</p>
			</div>
			<div class="relative group w-full md:w-2/6">
				<Image 
					src="/roger-portfolio.png"
					alt="Roger in a toy blister packaging"
					width={800}
					height={800}
					loading="eager"
					class="rounded-xl transition-transform duration-300 group-hover:scale-105"
				/>
			</div>
		</div>
	</section>

	<section class="py-12 px-6">
		<h2 class="text-statement font-light mb-16">SELECTED WORK</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
			<article class="group cursor-pointer">
				<div class="aspect-[4/3] bg-gray-100 dark:bg-gray-900 mb-4 overflow-hidden">
					<div class="w-full h-full flex items-center justify-center text-4xl font-bold opacity-20">
						01
					</div>
				</div>
				<h3 class="text-2xl font-semibold mb-2">Project Title</h3>
				<p class="font-light">Brief project description showcasing the key aspects and technologies used.</p>
			</article>

			<article class="group cursor-pointer">
				<div class="aspect-[4/3] bg-gray-100 dark:bg-gray-900 mb-4 overflow-hidden">
					<div class="w-full h-full flex items-center justify-center text-4xl font-bold opacity-20">
						02
					</div>
				</div>
				<h3 class="text-2xl font-semibold mb-2">Project Title</h3>
				<p class="font-light">Brief project description showcasing the key aspects and technologies used.</p>
			</article>
		</div>
	</section>

	<section class="py-section">
		<h2 class="text-statement font-light mb-16">ABOUT</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
			<div>
				<p class="text-xl font-light mb-8">
					A developer with a passion for minimal design and clean code. 
					Specializing in creating modern, user-centric digital experiences.
				</p>
				<p class="text-xl font-light">
					Currently available for freelance projects and collaborations.
				</p>
			</div>
			<div>
				<h3 class="text-xl font-semibold mb-4">EXPERTISE</h3>
				<ul class="space-y-2 font-light">
					<li>Frontend Development</li>
					<li>UI/UX Design</li>
					<li>Web Applications</li>
					<li>Responsive Design</li>
				</ul>
			</div>
		</div>
	</section>

	<section class="py-section">
		<h2 class="text-statement font-light mb-16">CONTACT</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
			<div>
				<p class="text-xl font-light mb-8">
					Let's work together to bring your ideas to life.
				</p>
				<a 
					href="mailto:your.email@example.com" 
					class="inline-block text-xl font-semibold border-b-2 border-current pb-1 hover:opacity-70 transition-opacity"
				>
					your.email@example.com
				</a>
			</div>
		</div>
	</section>
</Layout>
